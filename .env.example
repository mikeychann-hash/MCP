# ============================================================================
# MCP Runtime v3.0 - Environment Configuration Template
# ============================================================================
# Copy this file to .env and customize for your environment
# All values shown are defaults - uncomment and modify as needed

# ----------------------------------------------------------------------------
# Redis Configuration (Memory & Caching)
# ----------------------------------------------------------------------------
# Redis connection settings for memory features, semantic search, and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=5
REDIS_PASSWORD=

# Redis connection timeouts (milliseconds)
REDIS_CONNECT_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

# Enable/disable Redis-based features
REDIS_ENABLED=true

# ----------------------------------------------------------------------------
# Project Configuration
# ----------------------------------------------------------------------------
# Project root directory (defaults to current working directory)
# PROJECT_ROOT=C:\Users\YourUser\Documents\MyProject

# Maximum file size for indexing (bytes) - default 2MB
MAX_FILE_SIZE=2097152

# Maximum characters to read from files - default 2000
MAX_FILE_CHARS=2000

# ----------------------------------------------------------------------------
# Embedding Model Configuration
# ----------------------------------------------------------------------------
# Model for semantic search (Xenova Transformers)
EMBED_MODEL=Xenova/all-MiniLM-L6-v2
EMBED_DIMENSION=384

# Model cache directory (optional - defaults to node_modules cache)
# TRANSFORMERS_CACHE=C:\Users\YourUser\.cache\transformers

# ----------------------------------------------------------------------------
# Security Settings
# ----------------------------------------------------------------------------
# Allow shell command execution (DANGEROUS - only enable in trusted environments)
ALLOW_SHELL_EXECUTION=false

# Restrict file operations to project root
RESTRICT_TO_PROJECT_ROOT=true

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable detailed logging for debugging
DEBUG=false

# Log file path (optional - defaults to stderr only)
# LOG_FILE=C:\Users\YourUser\mcp-runtime\logs\server.log

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------
# Concurrency limit for parallel operations
CONCURRENCY_LIMIT=10

# Cache TTL in seconds (for file metadata, etc.)
CACHE_TTL=300

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# ----------------------------------------------------------------------------
# MCP Server Configuration
# ----------------------------------------------------------------------------
# Server name (for MCP protocol)
SERVER_NAME=mcp-runtime-v3

# Server version
SERVER_VERSION=3.0.0

# Protocol version
MCP_PROTOCOL_VERSION=2024-11-05

# ----------------------------------------------------------------------------
# Windows-Specific Configuration
# ----------------------------------------------------------------------------
# Use Windows-compatible Redis (Memurai)
USE_MEMURAI=true

# Memurai service name (if using Memurai instead of Redis)
MEMURAI_SERVICE_NAME=Memurai

# ----------------------------------------------------------------------------
# Development Settings (Development Mode Only)
# ----------------------------------------------------------------------------
# Enable hot reload in development
# DEV_HOT_RELOAD=true

# Enable TypeScript source maps in stack traces
# NODE_OPTIONS=--enable-source-maps

# ----------------------------------------------------------------------------
# Optional Features
# ----------------------------------------------------------------------------
# Enable semantic search features
ENABLE_SEMANTIC_SEARCH=true

# Enable file indexing
ENABLE_FILE_INDEXING=true

# Enable task queue
ENABLE_TASK_QUEUE=true

# Enable memory persistence
ENABLE_MEMORY_PERSISTENCE=true
