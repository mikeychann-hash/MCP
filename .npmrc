# NPM/PNPM Configuration for MCP Token Optimizer

# Use exact versions for dependencies
save-exact=true

# Hoist dependencies to root node_modules
shamefully-hoist=true

# Strict peer dependencies
strict-peer-dependencies=false

# Auto-install peer dependencies
auto-install-peers=true

# Enable better-sqlite3 native compilation
node-gyp=node-gyp

# Build from source for better compatibility
build-from-source=true
